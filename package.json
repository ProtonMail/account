{
  "private": true,
  "name": "proton-account",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run config",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender --template src/template.html",
    "config": "cross-env NODE_ENV=dev NODE_ENV_MODE=config tasks/setupConfig.js",
    "deploy": "cross-env NODE_ENV=dist tasks/deploy.js",
    "serve": "preact build --no-prerender --template src/template.html && preact serve",
    "dev": "preact watch -p 3000 --no-prerender --template src/template.html",
    "lint": "eslint src --quiet --cache",
    "test": "cross-env NODE_ENV=test jest ./tests",
    "pretty": "prettier -c --write $(find src -type f -name '*.js')"
  },
  "lint-staged": {
    "*.js": [
      "prettier -c --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-synacor",
      "standard-preact"
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "brace-style": [
        "error",
        "1tbs"
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "lines-around-comment": [
        0
      ],
      "react/jsx-indent": [
        2,
        4
      ],
      "react/jsx-indent-props": [
        2,
        4
      ],
      "react/sort-comp": [
        0
      ]
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "dedent": "^0.7.0",
    "del": "^3.0.0",
    "eslint": "^5.8.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-config-synacor": "^3.0.3",
    "execa": "^1.0.0",
    "husky": "^1.1.3",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^23.6.0",
    "jest-localstorage-mock": "^2.3.0",
    "jest-serializer-html-string": "^1.0.1",
    "lint-staged": "^8.0.4",
    "listr": "^0.14.1",
    "listr-update-renderer": "^0.5.0",
    "minimist": "^1.2.0",
    "preact-cli": "^3.0.0-next.14",
    "preact-render-spy": "^1.2.1",
    "preact-render-to-string": "^4.1.0",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "file-saver": "^2.0.0",
    "hi-base32": "^0.5.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "preact": "^8.2.6",
    "preact-cli-lodash": "^1.1.0",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7",
    "qrcode.react": "^0.8.0",
    "react-copy-to-clipboard": "^5.0.1",
    "react-modal": "^3.6.1",
    "ttag": "^1.4.2",
    "u2f-api": "^1.0.9",
    "unistore": "^3.1.0"
  },
  "jest": {
    "snapshotSerializers": [
      "preact-render-spy/snapshot",
      "jest-serializer-html-string"
    ],
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__",
      "jest-localstorage-mock"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.jsx$": "babel-jest",
      "^.+\\.js$": "babel-jest"
    },
    "testPathIgnorePatterns": [],
    "transformIgnorePatterns": [
      "/node_modules/(?!frontend-commons).+\\.js$"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMocks.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    },
    "globals": {
      "window": {}
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
